{
  "version": "2.0.0",
  "windows": {
    "command": "nmake",
    "options": {
      "env": {
        "Path": "${env:Path};${env:VCINSTALLDIR}Tools/Llvm/bin"
      }
    }
  },
  "tasks": [
    {
      "type": "shell",
      "label": "Build Debug Executable",
      "windows": {
        "args": [
          "\"DEBUG_BUILD=true\"",
          "clean",
          "debug.exe"
        ]
      },
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "Build Release Executable",
      "windows": {
        "args": [
          "clean",
          "release.exe"
        ]
      },
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}